{
  "name": "@devcontracts/spec",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "test": "deno test --allow-read src/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/mod.ts",
    "doc-lint": "deno doc --lint src/mod.ts",
    "doc-preview": "deno doc --html --allow-read src/mod.ts",
    "publish-dry-run": "deno publish --dry-run",
    "publish": "deno publish"
  },
  "fmt": {
    "include": [
      "src/",
      "examples/",
      "deno.json",
      "import_map.json",
      "README.md"
    ],
    "exclude": [],
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "always"
    }
  },
  "lint": {
    "include": ["src/"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "explicit-function-return-type",
        "no-explicit-any"
      ],
      "exclude": []
    }
  },
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "importMap": "import_map.json",
  "lock": false
}
